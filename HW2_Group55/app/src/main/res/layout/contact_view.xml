<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iconImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:maxHeight="80dp"
        android:maxWidth="80dp"
        app:srcCompat="@drawable/default_image"/>

    <TextView
        android:id="@+id/textFName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iconImage"
        android:layout_toRightOf="@+id/iconImage"
        android:text="Show FName Here"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textLName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textFName"
        android:layout_toEndOf="@+id/iconImage"
        android:layout_toRightOf="@+id/iconImage"
        android:text="Show LName Here"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textCompy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iconImage"
        android:layout_toEndOf="@+id/iconImage"
        android:layout_toRightOf="@+id/iconImage"
        android:text="Company Name"/>


</RelativeLayout>